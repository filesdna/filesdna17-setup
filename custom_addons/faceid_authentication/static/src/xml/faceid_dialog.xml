<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div t-name="FaceIdDialog">
        <div class="container-fluid">
            <div class="col-12 video-controls d-none">
                <fieldset class="reader-config-group">
                    <div class="row mb16">
                        <div class="col-3">
                            <label>
                                <span>Select Camera</span>
                            </label>
                        </div>
                        <div class="col-6">
                            <select name="video_source" class="videoSource" id="videoSource">
                            </select>
                        </div>
                        <div class="col-3">
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="row">
                <div class="col-12" id="videoContainer">
                    <video id="video" muted="true" autoplay="true" playsinline="true" style="width: 100%; max-height: 100%; box-sizing: border-box; display: none"/>
                    <canvas id="canvas" style="margin: 0 auto; width: 100%"/>
                    <canvas id="image" style="display: none;"/>
                </div>
            </div>
        </div>
	</div>

</templates>